<?xml version="1.0" encoding="UTF-8"?>
<sonsim version="1.0" type="optical">
    <!--module is the Routing Algorithm class in java-->
    <ra module="SOSR"/>

    <!-- 'calls' 业务流数量 -->
    <!-- 'load' 业务负载 -->
    <!-- 'max-rate=' 最高速率，用于结果统计 -->
    <!-- 'statisticStart' 表示将从哪个业务开始收集统计信息 -->
    <traffic type="otn" calls="20000" load="100" max-rate="100000" statisticStart="0">
        <!-- 'holding-time' 业务持续时间，单位 second -->
        <!-- 'rate' 业务速率，单位 Mbps 1000Mbps = 1Gbps -->
        <!-- 'weight' 不同业务的权重 -->
        <calls holding-time="600" rate="100000" weight="1"/>
    </traffic>

    <topology name="NSFNet">
        <nodes>
            <node id="0"/>
            <node id="1"/>
            <node id="2"/>
            <node id="3"/>
            <node id="4"/>
            <node id="5"/>
            <node id="6"/>
            <node id="7"/>
            <node id="8"/>
            <node id="9"/>
            <node id="10"/>
            <node id="11"/>
            <node id="12"/>
            <node id="13"/>
        </nodes>
        <links wavelengths="32">
            <link source="0" destination="1" id="1" bandwidth="10000" risk="H1"/>
            <link source="0" destination="2" id="1" bandwidth="10000" risk="H1"/>
            <link source="0" destination="7" id="1" bandwidth="10000" risk="L6"/>

            <link source="1" destination="0" id="2" bandwidth="10000" risk="H1"/>
            <link source="1" destination="2" id="2" bandwidth="10000" risk="L1"/>
            <link source="1" destination="3" id="2" bandwidth="10000" risk="L2"/>

            <link source="2" destination="0" id="2" bandwidth="10000" risk="H1"/>
            <link source="2" destination="1" id="3" bandwidth="10000" risk="L1"/>
            <link source="2" destination="6" id="3" bandwidth="10000" risk="L5"/>

            <link source="3" destination="1" id="4" bandwidth="10000" risk="L2"/>
            <link source="3" destination="4" id="4" bandwidth="10000" risk="L3"/>
            <link source="3" destination="8" id="4" bandwidth="10000" risk="H2"/>

            <link source="4" destination="3" id="5" bandwidth="10000" risk=""/>
            <link source="5" destination="2" id="6" bandwidth="10000" risk=""/>
