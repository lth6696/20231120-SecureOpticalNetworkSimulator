            <link source="8" destination="3" id="11" bandwidth="10000" risk=""/>
            <link source="9" destination="8" id="12" bandwidth="10000" risk=""/>
            <link source="10" destination="7" id="13" bandwidth="10000" risk=""/>
            <link source="10" destination="9" id="14" bandwidth="10000" risk=""/>
            <link source="11" destination="8" id="15" bandwidth="10000" risk=""/>
            <link source="11" destination="10" id="16" bandwidth="10000" risk=""/>
