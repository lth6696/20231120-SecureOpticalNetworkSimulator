<?xml version="1.0" encoding="UTF-8"?>
<sonsim version="1.0" type="optical">
    <!--module is the Routing Algorithm class in java-->
    <ra module="Suurballe"/>

    <!-- 'calls' 业务流数量 -->
    <!-- 'load' 业务负载 -->
    <!-- 'max-rate=' 最高速率，用于结果统计 -->
    <!-- 'statisticStart' 表示将从哪个业务开始收集统计信息 -->
    <traffic calls="4" load="500" max-rate="100000" statisticStart="0">
        <!-- 'holding-time' 业务持续时间，单位 second -->
        <!-- 'rate' 业务速率，单位 Mbps 1000Mbps = 1Gbps -->
        <!-- 'weight' 不同业务的权重 -->
        <calls holding-time="600" rate="1000" weight="9"/>
        <calls holding-time="600" rate="2500" weight="5"/>
        <calls holding-time="600" rate="10000" weight="2"/>
        <calls holding-time="600" rate="40000" weight="1"/>
        <calls holding-time="600" rate="100000" weight="1"/>
    </traffic>

    <!-- 'wavelengths' Number wavelengths for all links -->
    <!-- 'mensageProcessingTime' optional, mensage processing time in s -->
    <!-- 'configurationTimeOXC' optional, configuration time OXC in s -->
    <!-- 'propagationDelayTime' optional, propagation delay time in s -->
    <!-- 'switchTime' optional, switch time in s -->
    <!-- 'oxcTransitionTime' optional, OXC transition time (sleep/wake) in s -->
    <!-- 'oxcSleepModeExpenditure' optional, OXC sleep mode expenditure in percent (%) -->
    <!-- 'oxcOperationExpenditure' optional, OXC operation expenditure in W -->
    <!-- 'oxcNodeDegreeExpenditure' optional, OXC node degree expenditure in W -->
    <!-- 'oxcAddDropDegreeExpenditure' optional, OXC add drop degree expenditure in W -->
    <!-- 'olaExpenditure' optional, Optical line amplifier expenditure in W -->
    <!-- 'spanSize' optional, size of a span, km -->
    <topology name="5PMNet">
        <nodes>
            <node id="0" type="ROADM"/>
            <node id="1" type="ROADM"/>
            <node id="2" type="ROADM"/>
            <node id="3" type="ROADM"/>
            <node id="4" type="ROADM"/>
        </nodes>
        <links>
            <link id="0" source="0" destination="1" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="1" source="0" destination="4" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="2" source="1" destination="0" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="3" source="1" destination="2" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="4" source="1" destination="3" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="5" source="2" destination="1" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="6" source="2" destination="3" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="7" source="2" destination="4" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="8" source="3" destination="1" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="9" source="3" destination="2" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="10" source="3" destination="4" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="11" source="4" destination="0" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="12" source="4" destination="2" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
            <link id="13" source="4" destination="3" delay="4" weight="800" bandwidth="100" wavelengths="4"/>
        </links>
    </topology>
</sonsim>